{
  "name": "forum",
  "version": "1.0.0",
  "description": "Forum | REST API with NestJS",
  "author": "Wladimir <wladimir.code@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "build": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "infra:prep": "dotenv -- terraform -chdir=aws init",
    "infra:plan": "dotenv -- terraform -chdir=aws plan -var-file='.tfvars'",
    "infra:up": "dotenv -- terraform -chdir=aws apply -var-file='.tfvars' -auto-approve",
    "infra:down": "dotenv -- terraform -chdir=aws destroy -var-file='.tfvars'",
    "db:migrate": "prisma generate && prisma migrate deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "test:e2e:watch": "vitest --config ./vitest.config.e2e.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.540.0",
    "@nestjs/common": "^10.3.7",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.3.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.6",
    "@prisma/client": "^5.9.1",
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.10",
    "ioredis": "^5.3.2",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4",
    "zod-validation-error": "^1.5.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@rocketseat/eslint-config": "^2.1.0",
    "@swc/core": "^1.3.107",
    "@types/aws-lambda": "^8.10.136",
    "@types/aws-serverless-express": "^3.3.9",
    "@types/bcryptjs": "^2.4.4",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.16",
    "@types/passport-jwt": "^3.0.10",
    "@types/supertest": "^2.0.14",
    "@vitest/coverage-v8": "^0.34.6",
    "copy-webpack-plugin": "^12.0.2",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.56.0",
    "prisma": "^5.9.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "unplugin-swc": "^1.4.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^0.34.6",
    "webpack": "^5.91.0"
  }
}
